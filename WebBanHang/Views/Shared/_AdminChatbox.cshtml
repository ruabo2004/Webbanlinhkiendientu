            }
        }
        
        if (isOpen) {
            // Lu√¥n reload customerId m·ªõi nh·∫•t khi m·ªü chat
            $.ajax({
                url: '@Url.Action("GetCurrentCustomerId", "Home")',
                type: 'POST',
                success: function(response) {
                    var newCustomerId = response && response.customerId ? response.customerId : 0;
                    if (newCustomerId !== currentCustomerId) {
                        console.log('CustomerId changed when opening chat from', currentCustomerId, 'to', newCustomerId);
                        currentCustomerId = newCustomerId;
                        lastCustomerId = newCustomerId;
                        
                        // Reconnect v·ªõi customerId m·ªõi n·∫øu c·∫ßn
                        if ($.connection.hub && $.connection.hub.state === 1) {
                            $.connection.hub.stop().done(function() {
                                $.connection.hub.qs = { customerId: newCustomerId };
                                $.connection.hub.start({ qs: { customerId: newCustomerId } }).done(function() {
