            });
            
            $('#admin-chat-input').focus();
        }
    });
    
    // Ki·ªÉm tra thay ƒë·ªïi customerId m·ªói 3 gi√¢y (lu√¥n ki·ªÉm tra, kh√¥ng ch·ªâ khi m·ªü chat)
    setInterval(function() {
        reloadChatWithNewCustomer();
    }, 3000);

    $('#admin-chat-close').on('click', function() {
        isOpen = false;
        window.adminChatIsOpen = false; // ƒê·ªìng b·ªô v·ªõi window object
        $('#admin-chat-window').hide();
    });

    // === SIGNALR CLIENT METHODS ===
    chatHub.client.receiveAdminMessage = function(message, messageId, createdDate) {
        addMessage(message, false, createdDate);
    };

    chatHub.client.messageSent = function(messageId, message, createdDate) {
        // Tin nh·∫Øn ƒë√£ ƒë∆∞·ª£c g·ª≠i th√†nh c√¥ng
    };

