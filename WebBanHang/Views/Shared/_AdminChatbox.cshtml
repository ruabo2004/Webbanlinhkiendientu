                                }
                            } else if (newCustomerId === 0) {
                                // N·∫øu ƒë√£ logout
                                if (isOpen) {
                                    $('#admin-chat-messages').empty();
                                    addSystemMessage('Vui l√≤ng ƒëƒÉng nh·∫≠p ƒë·ªÉ s·ª≠ d·ª•ng chat');
                                }
                                // D·ª´ng SignalR connection
                                if ($.connection.hub && $.connection.hub.state === 1) {
                                    $.connection.hub.stop();
                                }
                            }
                        }
                    },
                    error: function() {
                        // N·∫øu kh√¥ng l·∫•y ƒë∆∞·ª£c, gi·ªØ nguy√™n gi√° tr·ªã hi·ªán t·∫°i
                    }
                });
            }

    // Function ƒë·ªÉ load chat history
    function loadChatHistory() {
        if (currentCustomerId <= 0) {
            console.warn('Cannot load chat history: CustomerID = 0');
            return;
        }
        
        if (!chatHub || !chatHub.server) {
            console.warn('chatHub.server not available');
            return;
        }
        
        if (!chatHub.server.getChatHistory) {
            console.warn('getChatHistory method not available');
            return;
        }
        
        // Ki·ªÉm tra SignalR connection
        if ($.connection.hub && $.connection.hub.state === 1) {
            // Connection ƒë√£ s·∫µn s√†ng, g·ªçi ngay
            console.log('Loading chat history for CustomerID:', currentCustomerId);
            chatHub.server.getChatHistory().done(function() {
                console.log('Chat history loaded successfully');
            }).fail(function(error) {
