                    });
                } else {
                    console.error('chatHub.server.sendMessage kh√¥ng tr·∫£ v·ªÅ promise!');
                    alert('L·ªói: Kh√¥ng th·ªÉ g·ª≠i tin nh·∫Øn. Vui l√≤ng ki·ªÉm tra console.');
                }
            } catch (ex) {
