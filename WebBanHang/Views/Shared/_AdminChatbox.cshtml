            console.log('Admin chat widget initialized, CustomerID:', currentCustomerId);
            console.log('chatHub:', chatHub);
            console.log('$.connection:', $.connection);
            
            // Function ƒë·ªÉ reload chat v·ªõi customerId m·ªõi
            function reloadChatWithNewCustomer() {
                // L·∫•y customerId m·ªõi t·ª´ server qua AJAX
