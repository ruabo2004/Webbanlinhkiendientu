                                        }
                                        // N·∫øu ƒëang m·ªü chat, load l·ªãch s·ª≠ ngay
                                        if (isOpen && chatHub.server.getChatHistory) {
                                            console.log('Loading chat history after start for CustomerID:', newCustomerId);
                                            chatHub.server.getChatHistory().done(function() {
                                                console.log('Chat history loaded after start');
                                            }).fail(function(error) {
                                                console.error('Failed to load chat history after start:', error);
                                            });
                                        }
