        } else {
            // Ch∆∞a connect, ƒë·ª£i connection start
            console.log('SignalR not connected, waiting for connection...');
            if ($.connection.hub) {
                $.connection.hub.start({ qs: { customerId: currentCustomerId } }).done(function() {
                    console.log('SignalR connected, loading chat history...');
                    if (chatHub.server.registerCustomer) {
