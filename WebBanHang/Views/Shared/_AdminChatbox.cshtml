                                            }
                                            // N·∫øu ƒëang m·ªü chat, load l·ªãch s·ª≠ ngay
                                            if (isOpen && chatHub.server.getChatHistory) {
                                                console.log('Loading chat history after reconnect for CustomerID:', newCustomerId);
                                                chatHub.server.getChatHistory().done(function() {
