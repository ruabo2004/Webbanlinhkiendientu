    }
    
    // === TOGGLE CHAT WINDOW ===
    $('#admin-chat-toggle').on('click', function() {
        isOpen = !isOpen;
        window.adminChatIsOpen = isOpen; // ƒê·ªìng b·ªô v·ªõi window object
        $('#admin-chat-window').toggle();
        
